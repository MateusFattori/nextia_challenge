@{
    <div class="text-center">

        <form asp-controller="Home" asp-action="RegistroProduto" method="post">

            <input name="nome" class="form-control form-control-lg" type="text" placeholder="Nome do Produto">
            <input name="categoria" class="form-control form-control-lg" type="text" placeholder="Categoria do produto" />
            <input name="valor" class="form-control form-control-lg" type="number" placeholder="Valor do produto" />
            


            <button type="submit">Cadastrar</button>
        </form>

    </div>
}
